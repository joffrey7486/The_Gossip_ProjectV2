<h2>Mes potins</h2>
<% @user.gossips.each do |gossip| %>
    <ul>
        <li>Titre: <%= gossip.title %></li>
        <li>Potin: <%= gossip.content %></li>
        <li><%= link_to "Voir ce potin", gossip_path(gossip.id) %></li>
        <li><%= link_to "Voir les autres potins de: #{gossip.user.city.name}", city_path(@user.city.id)%></li>
        <li><%= gossip.likes.count%></li>
    </ul>
<% end %>
