    <% @user.gossips.each do |gossip| %>
        <div class="card-body">
            <ul>
                <p>Titre: <%= gossip.title %></p>
                <p>Potin: <%= gossip.content %></p>
                <p><%= link_to "Voir ce potin", gossip_path(gossip.id) %></p>
            </ul>
        </div>
    <% end %>
</div>
