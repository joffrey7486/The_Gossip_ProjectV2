<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProjectV2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
  </head>

  <body>
    <%= link_to "Home", gossips_path%>
    <% if user_signed_in? %>
      <%= link_to "Mon profil", user_path(current_user.id)%>
      <%= link_to "Créer un potin", new_gossip_path %>
      <%= link_to "Se déconnecter", destroy_user_session_path ,method: "delete"%>
      <h2>Bienvenue <%= current_user.first_name %></h2>
    <% else %>
      <%= link_to "S\'inscrire", new_user_registration_path%>
      <%= link_to "Se connecter", new_user_session_path%>
    <% end %>
    <%= yield %>
  </body>
</html>
